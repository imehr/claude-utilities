{
  "manifest_version": 3,
  "name": "Claude Artifact Expander",
  "version": "1.0",
  "description": "Expand Claude's artifact panel to a custom width",
  "author": "Mehran Mozaffari",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["html2canvas.min.js"],
    "matches": ["<all_urls>"]
  }]
} 